Program ::= Func*;

Func ::= FunID [Stmts];
Stmts ::= Stmt*;

abstract Stmt;
VarDecl : Stmt ::= IdDecl [Expr];
Assign : Stmt ::= IdUse Expr;

abstract Expr;
Numeral : Expr ::= <NUMERAL>;
IdUse : Expr ::= <ID>;
Add : Expr ::= Left:Expr Right:Expr;
Mul : Expr ::= Left:Expr Right:Expr;

IdDecl ::= <ID>;

FunID ::= <ID>;
